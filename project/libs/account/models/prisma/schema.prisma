generator client {
  provider = "prisma-client-js"
  output = "../../../../node_modules/.prisma/account-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  email             String   @unique
  firstname         String
  lastname          String
  avatar            String?
  createdAt         DateTime @default(now())
  publicationsCount Int
  subscribersCount  Int

  passwordHash      String
  //subscribers       UserSubscriber[] @relation("subscribers")
  //subscriptions     UserSubscriber[] @relation("subscriptions")

  @@map("users")
}

model Token {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  tokenId   String   @unique 
  createdAt DateTime @default(now())
  userId    String   
  expiresIn DateTime 
  
  @@map("tokens")
}

